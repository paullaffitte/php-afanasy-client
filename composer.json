{
    "name": "abuisine/php-afanasy-client",
    "description": "A PHP rewrite of the Afanasy python client",
    "type": "library",
    "homepage": "https://github.com/abuisine/php-afanasy-client",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Alexandre Buisine",
            "email": "alexandrejabuisine@gmail.com"
        },
        {
            "name": "Paul Laffitte",
            "email": "paul.laffitte@epitech.eu"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "vlucas/phpdotenv": "^4.0"
    },
    "autoload": {
        "psr-0": {
            "Afanasy": "src/"
        }
    },
    "scripts": {
        "tests": "phpunit --testdox",
        "tests:integration": "composer run tests -- --testsuite Integration",
        "tests:unit": "composer run tests -- --testsuite Unit",
        "tests:suites": "composer run tests -- --list-suites"
    }
}
